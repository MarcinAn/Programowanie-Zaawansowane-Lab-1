@model Programowanie_Zaawansowane_Laboratorium_1.Models.Schedule

@{
    ViewData["Title"] = "Usuń";
}

<div class="text-center">
    <h1 class="display-4" , style="background-color:cornflowerblue; padding-top:10px; padding-bottom:15px; border-radius:4px">Zajęcia</h1>
</div>

<h4 style="margin-top:26px; margin-bottom:26px">Czy napewno chcesz usunąć?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lecturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartSubjectDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartSubjectDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndSubjectDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndSubjectDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary"> Wróć do listy</a>
    </form>
</div>
