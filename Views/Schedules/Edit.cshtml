@model Programowanie_Zaawansowane_Labolatorium_1.Models.Schedule

@{
    ViewData["Title"] = "Edycja";
}

<div class="text-center">
    <h1 class="display-4" , style="background-color:cornflowerblue; padding-top:10px; padding-bottom:15px">Zajęcia</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lecturer" class="control-label"></label>
                <input asp-for="Lecturer" class="form-control" />
                <span asp-validation-for="Lecturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartSubjectDate" class="control-label"></label>
                <input asp-for="StartSubjectDate" class="form-control" />
                <span asp-validation-for="StartSubjectDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndSubjectDate" class="control-label"></label>
                <input asp-for="EndSubjectDate" class="form-control" />
                <span asp-validation-for="EndSubjectDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <div class="control-label">
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<Types>()">
                        <option selected="selected" value="">Proszę wybrać</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
